<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:id="@+id/front_layer"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  app:cardElevation="1dp"
  app:cardPreventCornerOverlap="false"
  app:shapeAppearance="@style/ShapeAppearance.Claptrap.MediumComponent.OnlyTop">

  <com.google.android.material.card.MaterialCardView
    android:id="@+id/wallet_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:transitionName="shared_element_container"
    app:cardElevation="2dp"
    app:cardPreventCornerOverlap="false"
    app:shapeAppearance="@style/ShapeAppearance.Claptrap.MediumComponent.OnlyTop">

    <androidx.constraintlayout.widget.ConstraintLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent">

      <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/wallet_graph"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        android:src="@drawable/placeholder"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearance="@style/ShapeAppearance.Claptrap.MediumComponent.OnlyTop" />

      <TextView
        android:id="@+id/wallet_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:includeFontPadding="false"
        android:text="Personal"
        android:textAppearance="?attr/textAppearanceHeadline6"
        android:textColor="?attr/colorOnSurface"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/wallet_graph" />

      <TextView
        android:id="@+id/wallet_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="Total: $ 135,756"
        android:textAppearance="?attr/textAppearanceBody1"
        app:layout_constraintStart_toStartOf="@id/wallet_name"
        app:layout_constraintTop_toBottomOf="@id/wallet_name" />

    </androidx.constraintlayout.widget.ConstraintLayout>
  </com.google.android.material.card.MaterialCardView>
</com.google.android.material.card.MaterialCardView>





